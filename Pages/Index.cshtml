@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Welcome to GPIO 17</h1>
        <h4> Toggle Speed : @Model.Speed </h4>
        <h4> Enabled : @Model.Enabled </h4>
        <form method="post">
        <table>
            <tr>
                <td>Toggle Speed : </td>
                <td><input type="number" id="toggleSpeed" name="Speed" /></td>
            </tr>
            <tr>
                <td>Enabled : </td>
                <td><input type="checkbox" id="toggleEnable" name="Enabled" value="true" /></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" asp-page-handler="Submit" /></td>
            </tr>
        </table>
        <hr>
    </form>
    </div>
</body>
</html>